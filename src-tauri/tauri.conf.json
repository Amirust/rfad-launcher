{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rfad-launcher",
  "version": "0.1.2",
  "identifier": "com.rfad-launcher.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run generate",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RFAD Launcher",
        "width": 1100,
        "height": 675,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU3NjRFMjQwNzVDRDlEODcKUldTSG5jMTFRT0prVndiS3RPYkREbkZuWE5nbWRqYUJ3VkV5c1JRNGhNWHNvbUxXb01mck9HVlAK",
      "endpoints": [
        "https://github.com/Amirust/rfad-launcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
